#!/bin/bash

text=" hi!"
d="$(tput sgr0 2>/dev/null)"
bo="$(tput bold 2>/dev/null)"

do_it()
{
	for f in {0..15}; do
		fg="$(tput setaf ${f} 2>/dev/null)"
		for b in {0..7}; do
			bg="$(tput setab ${b} 2>/dev/null)"
			echo -n -e "${d}${bg}${fg}${text}${d}${bo}${bg}${fg}${text} ${d}"
		done
		echo
	done
	for f in {0..15}; do
		fg="$(tput setaf ${f} 2>/dev/null)"
		for b in {8..15}; do
			bg="$(tput setab ${b} 2>/dev/null)"
			echo -n -e "${d}${bg}${fg}${text}${d}${bo}${bg}${fg}${text} ${d}"
		done
		echo
	done
}

echo -e "${d}"
do_it
echo -e "${d}"
